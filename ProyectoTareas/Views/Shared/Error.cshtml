@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}
<div class="row">
    <div class="large-12 columns">
        @{
            
            if (String.IsNullOrEmpty(ViewBag.errorMessage))
            {
                <h2 class="text-danger">Ups....Ha ocurrido un error.</h2>
            }
            else
            {
                <h2 class="text-danger">@ViewBag.errorMessage</h2>
            }
        }
    </div>
</div>

